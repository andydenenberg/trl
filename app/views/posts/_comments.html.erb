<div class='row'>
	<div class='span9 offset1'>
		<%= link_to_function 'Add Comment', "AddComment(" + @post.id.to_s + "); return false", :class => 'btn btn-primary btn-mini', :id => 'add_comment_button' %>
		<br><br>

	<% @post.comments.each do |c| %>

		<blockquote>
			<%= c.note.html_safe %>
			<br><br>
			<div class='pull-right'>
			<b><%= User.find(c.user_id).name %></b> on <%= c.created_at.strftime('%b %d, %Y') %>
			<% if current_user.id == c.user_id %> |
			    <%= link_to 'Edit', modify_comment_path(c), :class => 'btn btn-mini' %> |
			    <%= link_to 'Remove', c, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %> 
			<% end %>
		</blockquote><br>
		<hr>
	<% end %>
	
	</div>
</div>
