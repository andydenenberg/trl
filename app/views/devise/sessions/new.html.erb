  <style type="text/css">
    body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
    }
  </style>


  <div class="container">


	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
	  <%= f.input :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %>
	  <%= f.input :password , :class => "input-block-level", :placeholder => "Password"%>
	  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	  <%= f.button :submit, "Sign in", :class => 'btn btn-large btn-primary' %><br><br>
	<%= render "devise/shared/links" %>
	<% end %>

  </div> <!-- /container -->
