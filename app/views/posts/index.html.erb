<div class="row">
  <div class='span10 offset1'>
		<% if @type_is == 'News' %>
			<h3>Technical Reference Library</h3>
			<%= render 'tech_docs' %>
			
		<% else %>
			<h3>Structural Waterproofing Glossary</h3>
			<%= render 'glossary' %>
		<% end %>
 
	<% if current_user.roles.first.name == 'admin' %>
		<% if @type_is == 'Discussion' %>
		  <%= link_to 'Add Glossary Item', new_post_path(:type_is => 'Discussion'), :class => 'btn btn-mini' %>
		<% elsif @type_is == 'News' %>
		  <%= link_to 'Add Document', new_post_path(:type_is => 'News'), :class => 'btn btn-mini' %>
		<% else %>
		  <%= link_to 'Add Glossary Item', new_post_path(:type_is => 'Discussion'), :class => 'btn btn-mini' %>
		  <%= link_to 'Add Document', new_post_path(:type_is => 'News'), :class => 'btn btn-mini' %>		
		<% end %>	
	<% end %>

  </div>
</div>
