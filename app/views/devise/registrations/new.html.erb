<style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }
</style>


<div class="container">


	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading">Please sign up</h2>

  <%= f.error_notification %>
  <%= f.input :name, :autofocus => true, :class => "input-block-level" %> 
  <%= f.input :email, :required => true, :class => "input-block-level", :placeholder => "Email address" %>
  <%= f.input :password, :required => true, :class => "input-block-level", :placeholder => "Password" %>
  <%= f.input :password_confirmation, :required => true %>
  <%= f.button :submit, 'Sign up', :class => 'btn-primary' %><br><br>
<%= render "devise/shared/links" %>

<% end %>
