<div class="row">
  <div class='span10 offset1'>
		<% if @type_is == 'Documents' %>
			<h3>Technical Reference Library</h3>
			<%= render 'tech_docs' %>
			
		<% else %>
			<h3>Structural Waterproofing Glossary</h3>
			<%= render 'glossary' %>
		<% end %>
 
	<% if current_user.roles.first.name == 'admin' %>
		<% if @type_is == 'Glossary' %>
		  <%= link_to 'Add Glossary Item', new_post_path(:type_is => 'Glossary'), :class => 'btn btn-mini' %>
		<% elsif @type_is == 'Documents' %>
		  <%= link_to 'Add Document', new_post_path(:type_is => 'Documents'), :class => 'btn btn-mini' %>
		<% else %>
		  <%= link_to 'Add Glossary Item', new_post_path(:type_is => 'Glossary'), :class => 'btn btn-mini' %>
		  <%= link_to 'Add Document', new_post_path(:type_is => 'Documents'), :class => 'btn btn-mini' %>		
		<% end %>	
	<% end %>

  </div>
</div>
